pragma solidity ^0.8.18;

import {Test} from "forge-std/Test.sol";
import {console} from "forge-std/console.sol";
import {DeployMoodNft} from "../../script/DeployMoodNft.s.sol";

contract DeployMoodNftTest is Test {
    DeployMoodNft public deployer;

    function setUp() public {
        deployer = new DeployMoodNft();
    }

    function testConvertSadSvgToUri() public view {
        // Read the sad SVG content
        string memory sadSvg = vm.readFile("./img/sad.svg");
        
        // Encode it into the URI using the deployer's svgToImageURI function
        string memory actualSadUri = deployer.svgToImageURI(sadSvg);

        // Manually encode the expected sad SVG content in Base64
        string memory expectedSadUri =  "data:image/svg+xml;base64,";

        // Assert that the actual URI matches the expected URI for sad SVG
        assertEq(actualSadUri, expectedSadUri);
    }

    function testConvertHappySvgToUri() public view {
        // Read the happy SVG content
        string memory happySvg = vm.readFile("./img/happy.svg");

        // Encode it into the URI using the deployer's svgToImageURI function
        string memory actualHappyUri = deployer.svgToImageURI(happySvg);
      
        // Manually encode the expected happy SVG content in Base64
        string memory expectedHappyUri = "data:image/svg+xml;base64,";
        assertEq(actualHappyUri, expectedHappyUri);
    }
}
